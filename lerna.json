{
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "scripts/**",
        "**/__tests__/**",
        "**/*.md",
        "lerna.json"
      ],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "version": {
      "preid": "alpha",
      "ignoreChanges": [
        "**/*.md",
        "lerna.json"
      ],
      "allowBranch": [
        "master",
        "develop",
        "release/*"
      ],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish %s!"
    }
  },
  "packages": [
    "modules/*"
  ]
}
