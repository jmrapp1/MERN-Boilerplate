{
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "lib": ["es6", "dom", "dom.iterable"],
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "emitDeclarationOnly": true,
    "baseUrl": "",
    "paths": {
      "@jrapp/server-logging/*": ["./server-logging/src/*"],
      "@jrapp/server-logging": ["./server-logging/src"],
      "@jrapp/server-middleware/*": ["./server-middleware/src/*"],
      "@jrapp/server-middleware": ["./server-middleware/src"],
      "@jrapp/shared-dates/*": ["./shared-dates/src/*"],
      "@jrapp/shared-dates": ["./shared-dates/src"],
      "@jrapp/shared-resources/*": ["./shared-resources/src/*"],
      "@jrapp/shared-resources": ["./shared-resources/src"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "./scripts/**",
    "**jest**"
  ]
}
