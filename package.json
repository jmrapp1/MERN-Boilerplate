    "@babel/polyfill": "^7.4.4",
    "@jrapp/server-core-events": "file:modules/server-core-events",
    "@jrapp/server-core-logging": "file:./modules/server-core-logging",
    "@jrapp/server-core-module": "file:modules/server-core-module",
    "@jrapp/server-core-web": "file:./modules/server-core-web",
