{
  "name": "MERN_Boilerplate",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "clean": "npm run clean:modules && npm run clean:app",
    "clean:modules": "lerna exec -- \"rm -rf dist && rm -rf node_modules && rm -f tsconfig.tsbuildinfo && rm -f package-lock.json\"",
    "clean:app": "rm -rf dist && rm -rf node_modules && rm -f tsconfig.tsbuildinfo && rm -f package-lock.json",
    "install:modules": "lerna exec -- npm i --no-package-lock",
    "build": "npm run build:modules && npm run build:app",
    "build:modules": "lerna run build --stream",
    "build:modules:client": "lerna run build --scope=@jrapp/client-* --stream",
    "build:modules:server": "lerna run build --scope=@jrapp/server-* --stream",
    "build:modules:shared": "lerna run build --scope=@jrapp/shared-* --stream",
    "build:app": "npm run build:app:server && npm run build:app:client",
    "build:app:server": "tsc -p ./src/server",
    "build:app:client": "cd ./src/client && webpack --host 0.0.0.0 -p --env=prod",
    "watch:modules": "lerna run watch --stream --parallel",
    "watch:modules:client": "lerna run watch --scope=@jrapp/client-* --stream --parallel",
    "watch:modules:server": "lerna run watch --scope=@jrapp/server-* --stream --parallel",
    "watch:modules:shared": "lerna run watch --scope=@jrapp/shared-* --stream --parallel",
    "watch:app": "tsc -w -p ./src/server",
    "watch:app:server": "tsc -w -p ./src/server",
    "watch:app:client": "cd ./src/client && webpack-dev-server -d --env=dev",
    "app": "concurrently \"npm run app:client\" \"npm run app:server\" ",
    "app:server": "npm run build:app:server && concurrently \"npm run watch:app:server\" \"nodemon --config ./src/server/nodemon.json dist/server/app.js\"",
    "app:client": "cd ./src/client && webpack-dev-server -d --env=dev",
    "start": "node ./dist/server/app.js",
    "prod": "npm run build && npm run start"
  },
