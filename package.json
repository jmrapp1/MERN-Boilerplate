{
  "name": "modulfy",
  "version": "1.0.1-alpha.0",
  "description": "",
  "author": "Jon Rapp",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jmrapp1/Modulfy.git"
  },
  "scripts": {
    "create-workspace": "cd ./workspaces && node createWorkspace.js",
    "clean": "npm run clean:modules && npm run clean:app",
    "clean:modules": "lerna exec -- \"rm -rf dist && rm -rf node_modules && rm -f tsconfig.tsbuildinfo && rm -f package-lock.json\"",
    "clean:app": "rimraf dist && rimraf node_modules && rimraf tsconfig.tsbuildinfo && rimraf package-lock.json",
    "install:modules": "lerna exec -- npm i --no-package-lock",
    "modules:release:version": "lerna version --force-publish --conventional-graduate --yes",
    "modules:release:publish": "lerna publish from-package --yes",
    "modules:alpha:version": "lerna version --conventional-prerelease --force-publish --preid alpha --yes",
    "modules:alpha:publish": "lerna publish from-package --dist-tag alpha --yes",
    "build": "npm run build:modules",
    "build:modules": "lerna run build --stream",
    "build:modules:client": "lerna run build --scope=@modulfy/client-* --stream",
    "build:modules:server": "lerna run build --scope=@modulfy/server-* --stream",
    "build:modules:shared": "lerna run build --scope=@modulfy/shared-* --stream",
    "watch:modules": "lerna run watch --stream --parallel",
    "watch:modules:client": "lerna run watch --scope=@modulfy/client-* --stream --parallel",
    "watch:modules:server": "lerna run watch --scope=@modulfy/server-* --stream --parallel",
    "watch:modules:shared": "lerna run watch --scope=@modulfy/shared-* --stream --parallel",
    "start": "node ./dist/server/app.js",
    "prod": "npm run build && npm run start"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2"
  }
}
