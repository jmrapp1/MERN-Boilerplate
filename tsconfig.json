{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "lib": ["es6", "dom", "dom.iterable"],
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jrapp/server-core-logging/*": ["./server-core-logging/src/*"],
      "@jrapp/server-core-logging": ["./server-core-logging/src"],
      "@jrapp/server-core-web/*": ["./server-core-web/src/*"],
      "@jrapp/server-core-web": ["./server-core-web/src"],
      "@jrapp/shared-core-dates/*": ["./shared-core-dates/src/*"],
      "@jrapp/shared-core-dates": ["./shared-core-dates/src"],
      "@jrapp/shared-core-resources/*": ["./shared-core-resources/src/*"],
      "@jrapp/shared-core-resources": ["./shared-core-resources/src"],
      "@jrapp/server-core-events/*": ["./server-core-events/src/*"],
      "@jrapp/server-core-events": ["./server-core-events/src"],
      "@jrapp/server-core-module/*": ["./server-core-module/src/*"],
      "@jrapp/server-core-module": ["./server-core-module/src"],
      "@jrapp/server-dal-interface/*": ["./server-dal-interface/src/*"],
      "@jrapp/server-dal-interface": ["./server-dal-interface/src"],
      "@jrapp/server-dal-mongodb/*": ["./server-dal-mongodb/src/*"],
      "@jrapp/server-dal-mongodb": ["./server-dal-mongodb/src"],
      "@jrapp/server-dal-apollo/*": ["./server-dal-apollo/src/*"],
      "@jrapp/server-dal-apollo": ["./server-dal-apollo/src"],
      "@jrapp/server-web-example/*": ["./server-web-example/src/*"],
      "@jrapp/server-web-example": ["./server-web-example/src"],
      "@jrapp/shared-resources-example/*": ["./shared-resources-example/src/*"],
      "@jrapp/shared-resources-example": ["./shared-resources-example/src"],
      "@jrapp/server-web-user/*": ["./server-web-user/src/*"],
      "@jrapp/server-web-user": ["./server-web-user/src"],
      "@jrapp/shared-resources-user/*": ["./shared-resources-user/src/*"],
      "@jrapp/shared-resources-user": ["./shared-resources-user/src"],
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/**",
    "./scripts/**",
    "**jest**"
  ]
}
