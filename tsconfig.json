{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonJS",
    "lib": ["es6", "dom", "dom.iterable"],
    "declaration": true,
    "composite": true,
    "noEmit": false,
    "jsx": "preserve",
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@jrapp/server-logging/*": ["./server-logging/src/*"],
      "@jrapp/server-logging": ["./server-logging/src"],
      "@jrapp/server-abstract-framework/*": ["./server-abstract-framework/src/*"],
      "@jrapp/server-abstract-framework": ["./server-abstract-framework/src"],
      "@jrapp/server-middleware/*": ["./server-middleware/src/*"],
      "@jrapp/server-middleware": ["./server-middleware/src"],
      "@jrapp/shared-dates/*": ["./shared-dates/src/*"],
      "@jrapp/shared-dates": ["./shared-dates/src"],
      "@jrapp/shared-resources/*": ["./shared-resources/src/*"],
      "@jrapp/shared-resources": ["./shared-resources/src"],
      "@jrapp/server-example-module/*": ["./server-example-module/src/*"],
      "@jrapp/server-example-module": ["./server-example-module/src"],
      "@jrapp/shared-example-module/*": ["./shared-example-module/src/*"],
      "@jrapp/shared-example-module": ["./shared-example-module/src"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "./scripts/**",
    "**jest**"
  ]
}
